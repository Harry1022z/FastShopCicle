@model TiendaCiclismo.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4">Detalles del Producto</h2>

    <div class="card shadow-sm p-4">
        <h4 class="fw-bold">@Model.Nombre</h4>
        <p><strong>Precio:</strong> $@Model.Precio.ToString("N2")</p>
        <p><strong>Categor√≠a:</strong> @Model.Categoria</p>
        <p><strong>Stock:</strong> @Model.Stock unidades</p>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fa fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fa fa-arrow-left"></i> Volver
        </a>
    </div>
</div>
