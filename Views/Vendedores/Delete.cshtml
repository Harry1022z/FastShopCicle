@model TiendaCiclismo.Models.Vendedor

@{
    ViewData["Title"] = "Eliminar Vendedor";
}

<h1 class="text-center mb-4 text-danger">Eliminar Vendedor</h1>

<div class="alert alert-warning">
    <h4>¿Estás seguro que deseas eliminar este vendedor?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card shadow p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Correo Electrónico</dt>
        <dd class="col-sm-9">@Model.Correo</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
