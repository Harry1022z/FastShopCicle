@model IEnumerable<TiendaCiclismo.Models.Factura>

@{
    ViewData["Title"] = "Facturas por Vendedor";
}

<h1 class="text-center mb-4">Facturas del Vendedor</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No hay facturas registradas para este vendedor.
    </div>
}
else
{
    <table class="table table-striped table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Fecha</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var factura in Model)
            {
                <tr>
                    <td>@factura.Producto?.Nombre ?? "N/A"</td>
                    <td>@factura.Cantidad</td>
                    <td>@factura.Fecha.ToShortDateString()</td>
                    <td>$@factura.Total.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary mt-4">Volver al listado de Vendedores</a>
