@model TiendaCiclismo.Models.Vendedor

@{
    ViewData["Title"] = "Editar Vendedor";
}

<h1 class="text-center mb-4">Editar Vendedor</h1>

<div class="card shadow p-4">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" placeholder="Actualizar nombre completo" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
            <input asp-for="Correo" class="form-control" placeholder="Actualizar correo" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefono" class="form-label">Teléfono</label>
            <input asp-for="Telefono" class="form-control" placeholder="Actualizar número" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <input type="submit" value="Actualizar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
