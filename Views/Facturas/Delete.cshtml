@model TiendaCiclismo.Models.Factura
@{
    ViewData["Title"] = "Eliminar Factura";
}

<div class="container mt-5">
    <h1 class="text-danger fw-bold mb-4">Eliminar Factura</h1>
    <h5>¿Estás seguro de que deseas eliminar esta factura?</h5>

    <div class="card shadow p-4 mt-4">
        <dl class="row">
            <dt class="col-sm-3">Producto</dt>
            <dd class="col-sm-9">@Model.Producto?.Nombre</dd>

            <dt class="col-sm-3">Vendedor</dt>
            <dd class="col-sm-9">@Model.Vendedor?.Nombre</dd>

            <dt class="col-sm-3">Cantidad</dt>
            <dd class="col-sm-9">@Model.Cantidad</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9 text-success fw-bold">$@Model.Total.ToString("N0")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger shadow">
                    <i class="fa fa-trash"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
