@model IEnumerable<TiendaCiclismo.Models.Factura>
@{
    ViewData["Title"] = "Facturas";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center fw-bold">Gesti√≥n de Facturas</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow">
            <i class="fa fa-plus"></i> Nueva Factura
        </a>
    </div>

    <div class="card shadow rounded">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th>Vendedor</th>
                        <th>Cantidad</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Producto?.Nombre</td>
                            <td>@item.Vendedor?.Nombre</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>$@item.Total.ToString("N0")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1" title="Ver detalles">
                                    Detalles<i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar factura">
                                    Eliminar<i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
